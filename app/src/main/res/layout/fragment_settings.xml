<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/debug"
        android:layout_width="161dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/normal"
        android:gravity="center"
        android:text="Statusleiste anzeigen"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/such" />

    <TextView
        android:id="@+id/reset"
        android:layout_width="161dp"
        android:layout_height="52dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/normal"
        android:gravity="center"
        android:text="ZurÃ¼cksetzen"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debug" />

    <TextView
        android:id="@+id/such"
        android:layout_width="161dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/normal"
        android:gravity="center"
        android:text="Sendersuchlauf starten"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>